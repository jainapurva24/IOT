const int gasSensorPin = A0;  
int gasSensorValue = 0;

void setup() 
	{
		Serial.begin(9600);
}

void loop() 
	{
		gasSensorValue = analogRead(gasSensorPin);
  		Serial.print("Gas Sensor Value: ");
		Serial.println(gasSensorValue);
  
  		if (gasSensorValue > 400) 
		{
			Serial.println("Warning: Gas detected!");
		}
  		delay(1000);
}
